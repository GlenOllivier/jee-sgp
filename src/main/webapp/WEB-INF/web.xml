<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>FrequentationFilter</filter-name>
    <filter-class>sgp.filter.FrequentationFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>FrequentationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>ListerCollaborateursController</servlet-name>
    <servlet-class>sgp.web.ListerCollaborateursController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ListerCollaborateursController</servlet-name>
    <url-pattern>/collaborateurs/lister</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AfficherStatsController</servlet-name>
    <servlet-class>sgp.web.AfficherStatsController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AfficherStatsController</servlet-name>
    <url-pattern>/stats/afficher</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>EditerCollaborateursController</servlet-name>
    <servlet-class>sgp.web.EditerCollaborateursController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>EditerCollaborateursController</servlet-name>
    <url-pattern>/collaborateurs/editer</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AjouterCollaborateursController</servlet-name>
    <servlet-class>sgp.web.AjouterCollaborateursController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AjouterCollaborateursController</servlet-name>
    <url-pattern>/collaborateurs/ajouter</url-pattern>
  </servlet-mapping>

</web-app>